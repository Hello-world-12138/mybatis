<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amk.mapper.EmployeeMapper">

    <!-- 按id查询 -->
    <select id="queryById" parameterType="int" resultType="com.amk.pojo.Employee">
        select emp_id empId, emp_name empName, emp_salary empSalary
        from t_emp
        where emp_id = #{id}
    </select>

    <!-- 按id删除 -->
    <delete id="deleteById" parameterType="int">
        delete from t_emp where emp_id = #{id}
    </delete>

    <!-- 按工资查询 -->
    <select id="queryBySalary" parameterType="double" resultType="com.amk.pojo.Employee">
        select emp_id empId, emp_name empName, emp_salary empSalary
        from t_emp
        where emp_salary = #{salary}
    </select>

    <insert id="insertEmp">
        insert into t_emp(emp_name,emp_salary) value(#{emp_name},#{emp_salary});
    </insert>
    
    <select id="queryBySalaryAndSalary" resultType="com.amk.pojo.Employee">
        select emp_id empId, emp_name empName, emp_salary empSalary
        from t_emp
        where emp_salary = #{b}and emp_name=#{a}
    </select>

    <insert id="insertEmpMap">
        insert into t_emp(emp_name,emp_salary) value(#{name},#{salary});
    </insert>

</mapper>
